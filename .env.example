# Browser Use Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# LLM API Keys (at least one is required)
# ============================================================================

# Browser Use API Key (recommended - optimized for browser automation)
# Get your key from: https://cloud.browser-use.com/new-api-key
BROWSER_USE_API_KEY=

# OpenAI API Key (recommended for best performance)
OPENAI_API_KEY=

# Alternative LLM providers
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
DEEPSEEK_API_KEY=
GROK_API_KEY=
NOVITA_API_KEY=

# ============================================================================
# Browser Configuration
# ============================================================================

# Run browser in headless mode (true/false)
BROWSER_USE_HEADLESS=false

# Path to Chrome/Chromium executable (optional)
# BROWSER_USE_EXECUTABLE_PATH=/path/to/chrome

# User data directory for browser profile
# BROWSER_USE_USER_DATA_DIR=./browser_data

# Disable browser security features (NOT recommended for production)
BROWSER_USE_DISABLE_SECURITY=false

# ============================================================================
# Logging Configuration
# ============================================================================

# Set the logging level (debug, info, warning, error, critical)
BROWSER_USE_LOGGING_LEVEL=info

# Log file paths (optional)
BROWSER_USE_DEBUG_LOG_FILE=debug.log
BROWSER_USE_INFO_LOG_FILE=info.log

# CDP (Chrome DevTools Protocol) logging level
CDP_LOGGING_LEVEL=WARNING

# ============================================================================
# MCP Server Configuration (for running as MCP server)
# ============================================================================

# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
MCP_SERVER_HOST=0.0.0.0

# Server port
MCP_SERVER_PORT=8000

# Browser session timeout in minutes
SESSION_TIMEOUT_MINUTES=30

# ============================================================================
# Display Configuration (for Docker/headless environments)
# ============================================================================

# X11 display (for headless with Xvfb)
DISPLAY=:99

# Enable VNC server for remote viewing (true/false)
ENABLE_VNC=false

# VNC password (change this for security)
VNC_PASSWORD=browseruse

# ============================================================================
# Docker Configuration
# ============================================================================

# User/Group IDs for file permissions (use your host user ID)
# Find with: echo $UID
PUID=911
PGID=911

# Host directory for shared files
HOST_FILES_DIR=./shared_files

# ============================================================================
# Proxy Configuration (optional)
# ============================================================================

# BROWSER_USE_PROXY_SERVER=http://proxy.example.com:8080
# BROWSER_USE_NO_PROXY=localhost,127.0.0.1,*.internal
# BROWSER_USE_PROXY_USERNAME=username
# BROWSER_USE_PROXY_PASSWORD=password

# ============================================================================
# Cloud Configuration
# ============================================================================

# Custom API base URL (for enterprise installations)
# BROWSER_USE_CLOUD_API_URL=https://api.browser-use.com

# Cloud sync settings
# BROWSER_USE_CLOUD_SYNC=false

# ============================================================================
# Telemetry and Analytics
# ============================================================================

# Enable/disable anonymous telemetry (true/false)
ANONYMIZED_TELEMETRY=true

# Chrome DevTools Protocol URL (usually auto-configured)
# CDP_URL=http://localhost:9222

